{% extends 'base.html.twig' %}

{% block stylesheets %}
  <script src="https://cdn.tailwindcss.com"></script>
  <link href="https://cdn.jsdelivr.net/npm/fullcalendar@6.1.15/main.min.css" rel="stylesheet">
  <style>
    .fc { 
      /* Estilos para hacer el calendario más compacto */
      --fc-border-color: #e5e7eb;
      --fc-page-bg-color: #fff;
      --fc-small-font-size: 0.85em;
    }
    .fc .fc-toolbar-title {
      font-size: 1.1em;
      font-weight: 600;
    }
    .fc .fc-col-header-cell-cushion {
      padding: 4px;
      font-weight: 500;
    }
    .fc .fc-daygrid-day-frame {
      min-height: 60px;
    }
  </style>
{% endblock %}

{% block body %}
<!-- 🌐 Navbar -->
<nav class="bg-gradient-to-r from-pink-500 to-purple-600 text-white shadow">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex justify-between h-16 items-center">
      <a href="/" class="text-2xl font-extrabold">🎭 Carnaval</a>
      <div class="space-x-6 hidden sm:flex">
        <a href="/" class="hover:text-gray-200">Inicio</a>
        <a href="{{ path('app_user_user') }}" class="hover:text-gray-200">Perfil</a>
        <a href="#calendar" class="hover:text-gray-200">Eventos</a>
        <a href="#mapa" class="hover:text-gray-200">Mapa</a>
        <a href="#galeria" class="hover:text-gray-200">Galería</a>
        <a href="#historia" class="hover:text-gray-200">Historia</a>
      </div>
    </div>
  </div>
</nav>

<!-- 🎉 Hero con contador -->


<!-- 📅 Calendario -->
<section id="calendar" class="py-12 px-4">
  <div class="max-w-5xl mx-auto">
    <h2 class="text-2xl font-bold mb-6 text-center">Calendario de Eventos</h2>

    <div class="bg-white rounded-2xl shadow-lg p-6 border border-gray-200">
      <div id="calendar" class="max-h-[600px] overflow-y-auto"></div>
    </div>
  </div>
</section>


<!-- 📌 Footer -->
<footer class="bg-gray-900 text-gray-300 py-8 mt-12">
  <div class="max-w-6xl mx-auto px-4 grid md:grid-cols-3 gap-6 text-center md:text-left">
    <div>
      <h3 class="text-lg font-bold text-white">Fechas</h3>
      <p>2 - 7 Enero 2026</p>
    </div>
    <div>
      <h3 class="text-lg font-bold text-white">Lugar</h3>
      <p>Pasto, Nariño</p>
    </div>
    <div>
      <h3 class="text-lg font-bold text-white">Eventos</h3>
      <p>50+ Presentaciones</p>
    </div>
  </div>
  <p class="text-center text-gray-500 mt-6">© 2025 ViveCarnaval</p>
</footer>
{% endblock %}

{% block javascripts %}
  {{ parent() }}
  <script src="https://cdn.jsdelivr.net/npm/fullcalendar@6.1.15/index.global.min.js" defer></script>

  <script defer>
  document.addEventListener('DOMContentLoaded', function() {
    // === FullCalendar ===
    const calendarEl = document.getElementById('calendar');
    if (calendarEl) {
      const calendar = new FullCalendar.Calendar(calendarEl, {
        initialView: 'dayGridMonth',
        locale: 'es',
        headerToolbar: { 
          left: 'prev,next', 
          center: 'title', 
          right: 'dayGridMonth,timeGridWeek' 
        },
        height: 'auto', // Para que no ocupe demasiado espacio vertical
        contentHeight: 'auto',
        aspectRatio: 1.3, // Proporción para que no sea demasiado ancho
        events: (fetchInfo, successCallback, failureCallback) => {
          fetch('/api/events')
            .then(r => r.json())
            .then(data => successCallback(data))
            .catch(err => failureCallback(err));
        }
      });
      calendar.render();
    }

  });
  </script>
{% endblock %}