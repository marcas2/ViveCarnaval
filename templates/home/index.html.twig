{% block javascripts %}
  {{ parent() }}
  <script src="https://cdn.jsdelivr.net/npm/fullcalendar@6.1.15/index.global.min.js"></script>
  <script defer>
  document.addEventListener('DOMContentLoaded', function() {
    // Menú móvil
    const mobileMenuButton = document.getElementById('mobile-menu-button');
    const mobileMenu = document.getElementById('mobile-menu');
    
    if (mobileMenuButton && mobileMenu) {
      mobileMenuButton.addEventListener('click', function() {
        mobileMenu.classList.toggle('hidden');
      });
    }

    // === Countdown ===
    async function initCountdown() {
      try {
        const res = await fetch('/api/countdown');
        const json = await res.json();

        if (!res.ok || !json.start) return;

        const start = new Date(json.start);

        function update() {
          const now = new Date();
          const diff = start - now;

          if (diff <= 0) {
            document.getElementById('countdown').innerHTML =
              '<div class="col-span-4 bg-green-500/20 backdrop-blur-sm text-white rounded-2xl p-8 text-center"><p class="text-2xl font-bold">¡El carnaval ha comenzado! 🎊</p><p class="mt-2">Disfruta de esta gran celebración</p></div>';
            clearInterval(interval);
            return;
          }

          document.getElementById('days').textContent = Math.floor(diff / (1000 * 60 * 60 * 24));
          document.getElementById('hours').textContent = Math.floor((diff / (1000 * 60 * 60)) % 24).toString().padStart(2, '0');
          document.getElementById('minutes').textContent = Math.floor((diff / (1000 * 60)) % 60).toString().padStart(2, '0');
          document.getElementById('seconds').textContent = Math.floor((diff / 1000) % 60).toString().padStart(2, '0');
        }

        update();
        const interval = setInterval(update, 1000);
      } catch (err) {
        console.error('Error cargando contador', err);
      }
    }

    initCountdown();

    // === FullCalendar ===
    var calendarEl = document.getElementById('calendar');
    if (calendarEl) {
      var calendar = new FullCalendar.Calendar(calendarEl, {
        initialView: 'dayGridMonth',
        locale: 'es',
        headerToolbar: {
          left: 'prev,next today',
          center: 'title',
          right: 'dayGridMonth,timeGridWeek,timeGridDay'
        },
        buttonText: {
          today: 'Hoy',
          month: 'Mes',
          week: 'Semana',
          day: 'Día'
        },
        events: '/api/events',
        eventColor: '#ec4899',
        eventDisplay: 'block'
      });
      calendar.render();
    }
    
    // Animación de elementos al hacer scroll
    const animateOnScroll = function() {
      const elements = document.querySelectorAll('.card-hover, .countdown-box');
      
      elements.forEach(element => {
        const position = element.getBoundingClientRect().top;
        const screenPosition = window.innerHeight / 1.3;
        
        if (position < screenPosition) {
          element.classList.add('animate__animated', 'animate__fadeInUp');
        }
      });
    };
    
    window.addEventListener('scroll', animateOnScroll);
    // Ejecutar una vez al cargar
    setTimeout(animateOnScroll, 500);
  });
  </script>
