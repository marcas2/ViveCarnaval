<script>
// Funciones para previsualizaci칩n de im치genes
function handleCreateImagePreview(input) {
    const previewContainer = document.getElementById('createPreviewContainer');
    const preview = document.getElementById('createPreview');
    
    if (input.files && input.files[0]) {
        const reader = new FileReader();
        
        reader.onload = function(e) {
            preview.src = e.target.result;
            previewContainer.classList.remove('hidden');
        }
        
        reader.readAsDataURL(input.files[0]);
    } else {
        previewContainer.classList.add('hidden');
    }
}

function handleEditImagePreview(input) {
    const previewContainer = document.getElementById('editNewPreviewContainer');
    const preview = document.getElementById('editNewPreview');
    
    if (input.files && input.files[0]) {
        const reader = new FileReader();
        
        reader.onload = function(e) {
            preview.src = e.target.result;
            previewContainer.classList.remove('hidden');
        }
        
        reader.readAsDataURL(input.files[0]);
    } else {
        previewContainer.classList.add('hidden');
    }
}

function validarCoordenadas(form) {
    const lat = parseFloat(form.latitud.value);
    const lng = parseFloat(form.longitud.value);
    if (isNaN(lat) || isNaN(lng)) { 
        Swal.fire({
            icon: 'error',
            title: 'Error en coordenadas',
            text: 'Las coordenadas deben ser valores num칠ricos v치lidos.',
            confirmButtonColor: '#8b5cf6'
        });
        return false; 
    }
    if (lat < -90 || lat > 90) { 
        Swal.fire({
            icon: 'error',
            title: 'Latitud inv치lida',
            text: 'La latitud debe estar entre -90 y 90 grados.',
            confirmButtonColor: '#8b5cf6'
        });
        return false; 
    }
    if (lng < -180 || lng > 180) { 
        Swal.fire({
            icon: 'error',
            title: 'Longitud inv치lida',
            text: 'La longitud debe estar entre -180 y 180 grados.',
            confirmButtonColor: '#8b5cf6'
        });
        return false; 
    }
    return true;
}

function openCreateModal() { 
    document.getElementById('createModal').classList.remove('hidden');
    document.body.style.overflow = 'hidden';
    // Resetear previsualizaci칩n al abrir
    document.getElementById('createPreviewContainer').classList.add('hidden');
    document.querySelector('#createModal input[name=imagen]').value = '';
}

function closeCreateModal() { 
    document.getElementById('createModal').classList.add('hidden');
    document.body.style.overflow = 'auto';
}

function openEditModal(id, titulo, descripcion, fecha, latitud, longitud, imagen, tipo) {
    document.getElementById('editModal').classList.remove('hidden');
    document.body.style.overflow = 'hidden';
    
    document.getElementById('editId').value = id;
    document.getElementById('editTitulo').value = titulo;
    document.getElementById('editDescripcion').value = descripcion;
    document.getElementById('editFecha').value = fecha;
    document.getElementById('editLatitud').value = latitud;
    document.getElementById('editLongitud').value = longitud;
    document.getElementById('editTipo').value = tipo;
    document.getElementById('editForm').action = '/events/edit/' + id;

    const preview = document.getElementById('editPreview');
    preview.src = imagen ? '/uploads/events/' + imagen : 'https://via.placeholder.com/150?text=Sin+Imagen';
    
    // Resetear previsualizaci칩n de nueva imagen
    document.getElementById('editNewPreviewContainer').classList.add('hidden');
    document.querySelector('#editForm input[name=imagen]').value = '';
}

function closeEditModal() { 
    document.getElementById('editModal').classList.add('hidden');
    document.body.style.overflow = 'auto';
}

function confirmDelete(id) {
    Swal.fire({
        title: '쮼liminar evento?',
        text: 'Esta acci칩n no se puede deshacer y el evento se perder치 permanentemente.',
        icon: 'warning',
        showCancelButton: true,
        confirmButtonColor: '#ef4444',
        cancelButtonColor: '#6b7280',
        confirmButtonText: 'S칤, eliminar',
        cancelButtonText: 'Cancelar',
        reverseButtons: true
    }).then(result => {
        if (result.isConfirmed) {
            const form = document.createElement('form');
            form.method = 'POST';
            form.action = '/events/delete/' + id;
            document.body.appendChild(form);
            form.submit();
        }
    });
}

// Cerrar modales al hacer clic fuera
document.addEventListener('click', function(event) {
    const createModal = document.getElementById('createModal');
    const editModal = document.getElementById('editModal');
    
    if (event.target === createModal) {
        closeCreateModal();
    }
    
    if (event.target === editModal) {
        closeEditModal();
    }
});
