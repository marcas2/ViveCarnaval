{% extends 'base.html.twig' %}

{% block title %}Autenticación - ViveCarnaval{% endblock %}

{% block stylesheets %}
    <script src="https://cdn.tailwindcss.com"></script>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <style>
        body {
            font-family: 'Poppins', sans-serif;
        }
        .tab-active {
            border-bottom: 3px solid #7e22ceb6;
            color: #7e22ce93;
            font-weight: 600;
        }
        .form-transition {
            transition: all 0.3s ease-in-out;
        }
        .card-hover {
            transition: transform 0.3s ease, box-shadow 0.3s ease;
        }
        .card-hover:hover {
            transform: translateY(-5px);
            box-shadow: 0 20px 25px -5px rgba(0, 0, 0, 0.1), 0 10px 10px -5px rgba(0, 0, 0, 0.04);
        }
        .gradient-bg {
            background: linear-gradient(135deg, #667eea 0%, #764ba2c2 100%);
        }
        .btn-gradient {
            background: linear-gradient(135deg, #7e22cea1 0%, #3b82f6 100%);
        }
        .btn-gradient:hover {
            background: linear-gradient(135deg, #3b82f6 0%, #7e22cea1 100%);
        }
        .btn-register {
            background: linear-gradient(135deg, #10b981 0%, #059669 100%);
        }
        .btn-register:hover {
            background: linear-gradient(135deg, #059669 0%, #10b981 100%);
        }
        /* Estilos para los modales */
        .modal {
            display: none;
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background-color: rgba(0, 0, 0, 0.5);
            z-index: 1000;
            backdrop-filter: blur(5px);
        }
        .modal-content {
            position: relative;
            background-color: white;
            margin: 5% auto;
            padding: 0;
            border-radius: 12px;
            width: 90%;
            max-width: 600px;
            max-height: 80vh;
            overflow-y: auto;
            box-shadow: 0 25px 50px -12px rgba(0, 0, 0, 0.25);
            animation: modalSlideIn 0.3s ease-out;
        }
        @keyframes modalSlideIn {
            from {
                opacity: 0;
                transform: translateY(-50px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }
        .modal-header {
            padding: 1.5rem;
            border-bottom: 1px solid #e5e7eb;
            background: linear-gradient(135deg, #7e22ce 0%, #3b82f6 100%);
            color: white;
            border-radius: 12px 12px 0 0;
        }
        .modal-body {
            padding: 1.5rem;
            max-height: 50vh;
            overflow-y: auto;
        }
        .modal-close {
            position: absolute;
            top: 1rem;
            right: 1.5rem;
            background: none;
            border: none;
            color: white;
            font-size: 1.5rem;
            cursor: pointer;
            transition: transform 0.2s;
        }
        .modal-close:hover {
            transform: scale(1.1);
        }
    </style>
{% endblock %}

