{% extends 'base.html.twig' %}

{% block title %}Autenticación - ViveCarnaval{% endblock %}

{% block stylesheets %}
    <script src="https://cdn.tailwindcss.com"></script>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <style>
        body {
            font-family: 'Poppins', sans-serif;
        }
        .tab-active {
            border-bottom: 3px solid #7e22ceb6;
            color: #7e22ce93;
            font-weight: 600;
        }
        .form-transition {
            transition: all 0.3s ease-in-out;
        }
        .card-hover {
            transition: transform 0.3s ease, box-shadow 0.3s ease;
        }
        .card-hover:hover {
            transform: translateY(-5px);
            box-shadow: 0 20px 25px -5px rgba(0, 0, 0, 0.1), 0 10px 10px -5px rgba(0, 0, 0, 0.04);
        }
        .gradient-bg {
            background: linear-gradient(135deg, #667eea 0%, #764ba2c2 100%);
        }
        .btn-gradient {
            background: linear-gradient(135deg, #7e22cea1 0%, #3b82f6 100%);
        }
        .btn-gradient:hover {
            background: linear-gradient(135deg, #3b82f6 0%, #7e22cea1 100%);
        }
        .btn-register {
            background: linear-gradient(135deg, #10b981 0%, #059669 100%);
        }
        .btn-register:hover {
            background: linear-gradient(135deg, #059669 0%, #10b981 100%);
        }
    </style>
{% endblock %}

{% block body %}
<div class="min-h-screen gradient-bg flex items-center justify-center py-12 px-4 sm:px-6 lg:px-8">
    <div class="max-w-4xl w-full mx-4">
        <div class="flex flex-col md:flex-row rounded-2xl overflow-hidden shadow-2xl card-hover">
            <!-- Sección ilustrativa -->
            <div class="md:w-2/5 bg-gradient-to-br from-purple-900 to-blue-800 p-8 text-white flex flex-col justify-center hidden md:block">
                <div class="text-center mb-8 transform transition-all duration-700 animate-fade-in">
                    <h2 class="text-3xl font-bold mb-2">¡Bienvenido a ViveCarnaval!</h2>
                    <p class="opacity-90">Descubre y vive la magia de los carnavales alrededor del mundo</p>
                </div>
                <div class="space-y-4 mt-6">
                    <div class="flex items-center opacity-90 transform transition-transform duration-300 hover:translate-x-2">
                        <div class="bg-white bg-opacity-20 rounded-full p-2 mr-3">
                            <i class="fas fa-ticket-alt text-xl"></i>
                        </div>
                        <p>Accede a eventos exclusivos</p>
                    </div>
                    <div class="flex items-center opacity-90 transform transition-transform duration-300 hover:translate-x-2">
                        <div class="bg-white bg-opacity-20 rounded-full p-2 mr-3">
                            <i class="fas fa-calendar-day text-xl"></i>
                        </div>
                        <p>Planifica tu experiencia carnavalera</p>
                    </div>
                    <div class="flex items-center opacity-90 transform transition-transform duration-300 hover:translate-x-2">
                        <div class="bg-white bg-opacity-20 rounded-full p-2 mr-3">
                            <i class="fas fa-users text-xl"></i>
                        </div>
                        <p>Conecta con otros amantes del carnaval</p>
                    </div>
                </div>
            </div>
            
            <!-- Sección de formularios -->
            <div class="md:w-3/5 bg-white p-8">
                <div class="text-center mb-8">
                    <img src="/img/ViveCarnaval.png" class="h-16 mx-auto mb-4 animate-pulse">
                    <h1 class="text-2xl font-bold text-gray-800">Accede a tu cuenta</h1>
                    <p class="text-gray-600">Gestiona tus eventos y vive la experiencia carnavalera</p>
                </div>
                
                <!-- Tabs para Login y Register -->
                <div class="bg-white rounded-lg overflow-hidden mb-6">
                    <div class="flex border-b">
                        <button id="login-tab" class="flex-1 py-4 px-6 text-center font-medium text-gray-500 hover:text-purple-700 border-b-2 border-transparent focus:outline-none transition-colors duration-300 flex items-center justify-center">
                            <i class="fas fa-sign-in-alt mr-2"></i> Iniciar Sesión
                        </button>
                        <button id="register-tab" class="flex-1 py-4 px-6 text-center font-medium text-gray-500 hover:text-purple-700 border-b-2 border-transparent focus:outline-none transition-colors duration-300 flex items-center justify-center">
                            <i class="fas fa-user-plus mr-2"></i> Registrarse
                        </button>
                    </div>

                    <!-- Formulario de Login -->
                    <div id="login-form" class="p-6 form-transition">
                       <form id="loginForm" class="space-y-6" action="{{ path('app_login') }}" method="POST">

                            {% if error %}
                                <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded relative" role="alert">
                                    <span class="block sm:inline">{{ error.messageKey|trans(error.messageData, 'security') }}</span>
                                </div>
                            {% endif %}
                            
                            <div>
                                <label for="login-email" class="block text-sm font-medium text-gray-700 mb-1">Correo electrónico</label>
                                <div class="relative">
                                    <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                                        <i class="fas fa-envelope text-gray-400"></i>
                                    </div>
                                    <input type="email" id="login-email" name="_username" value="{{ last_username }}" required class="mt-1 block w-full pl-10 pr-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-purple-500 focus:border-purple-500 sm:text-sm transition-colors duration-200" autocomplete="email">
                                </div>
                            </div>
                            <div>
                                <label for="login-password" class="block text-sm font-medium text-gray-700 mb-1">Contraseña</label>
                                <div class="relative">
                                    <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                                        <i class="fas fa-lock text-gray-400"></i>
                                    </div>
                                    <input type="password" id="login-password" name="_password" required class="mt-1 block w-full pl-10 pr-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-purple-500 focus:border-purple-500 sm:text-sm transition-colors duration-200" autocomplete="current-password">
                                </div>
                            </div>
                            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                            <div class="flex items-center justify-between">
                                <div class="flex items-center">
                                    <input id="remember_me" name="_remember_me" type="checkbox" class="h-4 w-4 text-purple-600 focus:ring-purple-500 border-gray-300 rounded">
                                    <label for="remember_me" class="ml-2 block text-sm text-gray-700">Recordarme</label>
                                </div>
                                <div class="text-sm">
                                    <a href="#" class="font-medium text-purple-600 hover:text-purple-500 transition-colors duration-200">¿Olvidaste tu contraseña?</a>
                                </div>
                            </div>
                            <button type="submit" class="w-full flex justify-center items-center py-3 px-4 border border-transparent rounded-md shadow-sm text-sm font-medium text-white btn-gradient hover:shadow-lg focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-purple-500 transition-all duration-300">
                                <i class="fas fa-sign-in-alt mr-2"></i> Iniciar Sesión
                            </button>
                        </form>
                    </div>

                    <!-- Formulario de Register -->
                    <div id="register-form" class="p-6 form-transition hidden">
                        <form id="registerForm" class="space-y-6">
                            <div>
                                <label for="register-name" class="block text-sm font-medium text-gray-700 mb-1">Nombre completo</label>
                                <div class="relative">
                                    <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                                        <i class="fas fa-user text-gray-400"></i>
                                    </div>
                                    <input type="text" id="register-name" name="nombre" required class="mt-1 block w-full pl-10 pr-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-purple-500 focus:border-purple-500 sm:text-sm transition-colors duration-200">
                                </div>
                            </div>
                            <div>
                                <label for="register-email" class="block text-sm font-medium text-gray-700 mb-1">Correo electrónico</label>
                                <div class="relative">
                                    <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                                        <i class="fas fa-envelope text-gray-400"></i>
                                    </div>
                                    <input type="email" id="register-email" name="correo" required class="mt-1 block w-full pl-10 pr-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-purple-500 focus:border-purple-500 sm:text-sm transition-colors duration-200">
                                </div>
                            </div>
                            <div>
                                <label for="register-password" class="block text-sm font-medium text-gray-700 mb-1">Contraseña</label>
                                <div class="relative">
                                    <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                                        <i class="fas fa-lock text-gray-400"></i>
                                    </div>
                                    <input type="password" id="register-password" name="contrasena" required class="mt-1 block w-full pl-10 pr-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-purple-500 focus:border-purple-500 sm:text-sm transition-colors duration-200">
                                </div>
                                <p class="mt-1 text-xs text-gray-500">Mínimo 8 caracteres con letras y números</p>
                            </div>
                            <div>
                                <label for="register-role" class="block text-sm font-medium text-gray-700 mb-1">Tipo de cuenta</label>
                                <div class="relative">
                                    <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                                        <i class="fas fa-user-tag text-gray-400"></i>
                                    </div>
                                    <select id="register-role" name="rol" class="mt-1 block w-full pl-10 pr-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-purple-500 focus:border-purple-500 sm:text-sm transition-colors duration-200">
                                        <option value="ROLE_USER">Usuario</option>
                                        <option value="ROLE_ADMIN">Administrador</option>
                                    </select>
                                </div>
                            </div>
                            <div class="flex items-center">
                                <input id="terms" name="terms" type="checkbox" class="h-4 w-4 text-purple-600 focus:ring-purple-500 border-gray-300 rounded" required>
                                <label for="terms" class="ml-2 block text-sm text-gray-700">
                                    Acepto los <a href="#" class="text-purple-600 hover:text-purple-500 transition-colors duration-200">términos y condiciones</a> y la <a href="#" class="text-purple-600 hover:text-purple-500 transition-colors duration-200">política de privacidad</a>
                                </label>
                            </div>
                            <button type="submit" class="w-full flex justify-center items-center py-3 px-4 border border-transparent rounded-md shadow-sm text-sm font-medium text-white btn-register hover:shadow-lg focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-green-500 transition-all duration-300">
                                <i class="fas fa-user-plus mr-2"></i> Crear cuenta
                            </button>
                        </form>
                    </div>
                </div>

                
                <div class="text-center text-sm text-gray-600 mt-4">
                    <p>Al acceder, aceptas nuestras <a href="#" class="text-purple-600 hover:text-purple-800 transition-colors duration-200">Condiciones</a>, <a href="#" class="text-purple-600 hover:text-purple-800 transition-colors duration-200">Política de datos</a> y <a href="#" class="text-purple-600 hover:text-purple-800 transition-colors duration-200">Política de cookies</a>.</p>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- SweetAlert2 -->
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

<script>
document.addEventListener('DOMContentLoaded', function() {
    const loginTab = document.getElementById('login-tab');
    const registerTab = document.getElementById('register-tab');
    const loginForm = document.getElementById('login-form');
    const registerForm = document.getElementById('register-form');

    // Función para activar una pestaña
    function activateTab(tab, form, otherTab, otherForm) {
        otherForm.classList.add('hidden');
        form.classList.remove('hidden');
        otherTab.classList.remove('tab-active', 'text-purple-700', 'border-purple-500');
        tab.classList.add('tab-active', 'text-purple-700', 'border-purple-500');
        
        // Animación de aparición
        form.style.opacity = 0;
        form.style.transform = 'translateY(10px)';
        form.classList.remove('hidden');
        
        setTimeout(() => {
            form.style.transition = 'opacity 0.3s ease, transform 0.3s ease';
            form.style.opacity = 1;
            form.style.transform = 'translateY(0)';
        }, 10);
    }
     // Formulario de Register
    document.getElementById('registerForm').addEventListener('submit', async function(e) {
        e.preventDefault();
        
        const formData = new FormData(this);
        const data = {
            nombre: formData.get('nombre'),
            correo: formData.get('correo'),
            contrasena: formData.get('contrasena'),
            rol: formData.get('rol')
        };

        try {
            const response = await fetch('/api/register', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                },
                body: JSON.stringify(data)
            });

            const result = await response.json();

            if (response.status === 201) {
                showMessage('¡Registro exitoso! Ahora puedes iniciar sesión.', 'success');
                this.reset();
                setTimeout(() => {
                    loginTab.click();
                }, 2000);
            } else {
                showMessage(result.error || 'Error en el registro', 'error');
            }
        } catch (error) {
            showMessage('Error de conexión', 'error');
        }
    });


    // Manejo de tabs
    loginTab.addEventListener('click', () => {
        activateTab(loginTab, loginForm, registerTab, registerForm);
    });

    registerTab.addEventListener('click', () => {
        activateTab(registerTab, registerForm, loginTab, loginForm);
    });

    // Manejo de mensajes de éxito después del registro
    {% for message in app.flashes('success') %}
        Swal.fire({
            icon: 'success',
            title: '¡Éxito!',
            text: '{{ message }}',
            confirmButtonColor: '#7e22ce',
            background: '#fff',
            iconColor: '#7e22ce'
        });
        // Cambiar a pestaña de login después del registro exitoso
        setTimeout(() => {
            loginTab.click();
        }, 2000);
    {% endfor %}

    // Manejo de mensajes de error después del registro
    {% for message in app.flashes('error') %}
        Swal.fire({
            icon: 'error',
            title: 'Error',
            text: '{{ message }}',
            confirmButtonColor: '#dc2626',
            background: '#fff',
            iconColor: '#dc2626'
        });
    {% endfor %}

    // Validación del formulario de registro
    document.getElementById('registerForm')?.addEventListener('submit', function(e) {
        const password = document.getElementById('register-password').value;
        const terms = document.getElementById('terms');
        
        if (password.length < 8) {
            e.preventDefault();
            Swal.fire({
                icon: 'error',
                title: 'Error',
                text: 'La contraseña debe tener al menos 8 caracteres',
                confirmButtonColor: '#dc2626',
                background: '#fff',
                iconColor: '#dc2626'
            });
            return;
        }
        
        if (!terms.checked) {
            e.preventDefault();
            Swal.fire({
                icon: 'error',
                title: 'Error',
                text: 'Debes aceptar los términos y condiciones',
                confirmButtonColor: '#dc2626',
                background: '#fff',
                iconColor: '#dc2626'
            });
            return;
        }
    });
    function showMessage(message, type) {
    Swal.fire({
        icon: type,
        title: type === 'success' ? 'Éxito' : 'Error',
        text: message,
        confirmButtonColor: type === 'success' ? '#7e22ce' : '#dc2626',
        background: '#fff',
        iconColor: type === 'success' ? '#7e22ce' : '#dc2626'
    });
}


    // Inicializar con la pestaña de login activa
    loginTab.classList.add('tab-active', 'text-purple-700', 'border-purple-500');
});
</script>
{% endblock %}